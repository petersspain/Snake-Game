#version 330 core

layout (location = 0) in vec3 pos;
layout (location = 1) in vec3 color;
layout (location = 2) in vec2 tex_coord;

uniform mat4 transform;

out vec3 in_color;
out vec2 in_tex_coord;

void main() {
    gl_Position = transform * vec4(pos, 1.0);
    in_color = color;
    in_tex_coord = tex_coord;
}